{
  "tasks": {
    "test": "deno test --allow-all --coverage=coverage_dir",
    "lint": "deno lint",
    "format": "deno fmt",
    "coverage": "deno coverage coverage_dir --detailed",
    "all": "deno task test && deno task lint && deno task format && deno task coverage"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "tests/"],
    "exclude": ["coverage_dir/", "node_modules/"]
  }
}
